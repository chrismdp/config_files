	email = cp@gower.st
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
[alias]
  aa = add --all
  di = diff
  ci = commit
  co = checkout
  st = status
  dc = diff --cached
  aadc = !git aa && git dc
[apply]
  whitespace = nowarn
[core]
  editor = /usr/bin/vim
  excludesfile = /Users/chris/.gitignore
[push]
  default = upstream
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	program = gpg2
[credential]
	helper = osxkeychain
